{
  "id": "simple-chat-flow",
  "author": {
    "name": "Ben-Hur",
    "e-mail": "bhlangonijr@gmail.com"
  },
  "_comment": "sample script for iterating over an object array",
  "flow": [
    {
      "id": "main",
      "sequence": [
        {
          "action": "json",
          "args": {
            "text": "{\"users\":[{\"username\":\"john\"},{\"username\":\"mary\"},{\"username\":\"alice\"},{\"username\":\"romeo\"},{\"username\":\"jason\"}]}",
            "set": "object"
          }
        },
        {
          "action": "forEach",
          "args": {
            "iterateOver": "object.users",
            "setElement": "forEachElement",
            "isParallel": true,
            "do": {
              "sequence": "greet"
            }
          }
        },
        {
          "action": "say",
          "args": {
            "text": "returned from iterations"
          }
        }
      ]
    },
    {
      "id": "greet",
      "sequence": [
        {
          "action": "expression",
          "args": {
            "text": "\"{{forEachElement.username}}\".toUpperCase()",
            "set": "username"
          }
        },
        {
          "action": "say",
          "args": {
            "text": "have a good one {{username}}"
          }
        }
      ]
    }
  ]
}